<h1>Sites</h1>

<!-- Loop through each site in the db and display the bookmarks for each -->
<% @sites.each do |site| %>
	<%= site.url %><br>
	<% site.bookmarks.each do |i| %>
  		<%= i.title %>
  	<% end %>
	<br>

<% end %>