<h2><%= @bookmark.title %></h2>
<br>
<p>
  <%= @bookmark.description %>
</p>

<%= link_to @bookmark.url, 'http://'+@bookmark.url %>
<br><br>
<p>
  <strong>Tags:</strong>
 
  <% @bookmark.tags.each do |i| %>
  		
  		<%= i.title %>
  <% end %>
</p>
<br><br>
<%= link_to 'Home', {controller: "welcome"}, :class => 'btn btn-primary' %>